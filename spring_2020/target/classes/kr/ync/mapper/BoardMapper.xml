<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ync.mapper.BoardMapper">
	
	<sql id="criteria">
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item='type' collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()">
							title like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'C'.toString()">
							content like '%'||#{keyword}||'%'
						</when>
						<when test="type == 'W'.toString()">
							writer like '%'||#{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>
	<select id="view" resultType="kr.ync.domain.BoardVO2">
	<![CDATA[
		select * from tbl_project_board where idx=#{idx}
		]]>
	</select>
	<select id="getList" resultType="kr.ync.domain.BoardVO">
	<![CDATA[
		select * from tbl_board where bno > 0 
		]]>
	</select>
	<select id="getImg" resultType="String">
		select img from tbl_project_board where idx=#{idx}
	</select>


	  <insert id="create">
		insert into tbl_project_board (idx, title, content, writer <if test="img!=null">, img</if>)
		values (seq_project_board.nextval, #{title}, #{content}, #{writer}<if test="img!=null">, #{img}</if>)
	</insert>

	
	<insert id="insertSelectKey">

		<selectKey keyProperty="bno" order="BEFORE"
			resultType="Long">
			select seq_board.nextval from dual
		</selectKey>

		insert into tbl_board (bno,title,content, writer, file_1, file_2, file_3)
		values (#{bno},
		#{title}, #{content}, #{writer}, #{file_1}, #{file_2}, #{file_3})
	</insert>
	

	<delete id="del">
		delete tbl_project_board where idx=#{idx}
	</delete>


 

	
	<update id="modify">
		update tbl_project_board
		set title= #{title},
		content=#{content}
		<if test="img!=null">, img=#{img}
		</if>
		where idx =
		#{idx}
	</update>
