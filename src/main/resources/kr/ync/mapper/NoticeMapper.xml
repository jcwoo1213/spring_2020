	<select id="ListWithPaging" resultType="kr.ync.domain.NoticeVO">
		<![CDATA[
  		SELECT	idx,
  				title,
  				content,
  				writer,
  				count,
  				regdate
		FROM	(SELECT /*+INDEX_DESC(tbl_project_notice XPKTBL_NOTICE) */
						rownum rn,
						idx,
						title,
						content,
						writer,
						regdate,
						count
				FROM	tbl_project_notice
				WHERE	rownum <= #{pageNum} * #{amount}
				)
		WHERE rn > (#{pageNum} -1) * #{amount}
		]]>
	</select>
	 
